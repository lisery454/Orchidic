<UserControl x:Class="Orchidic.Views.Components.SvgIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Orchidic.Views.Components"
             x:Name="root"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid Width="{Binding Width, ElementName=root}"
        Height="{Binding Height, ElementName=root}">
    <Path x:Name="SvgPath"

          Data="{Binding Geometry, ElementName=root}"
          Fill="{Binding Fill, ElementName=root}"
          Stretch="Uniform" />
  </Grid>
</UserControl>