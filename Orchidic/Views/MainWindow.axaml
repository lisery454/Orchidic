<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Orchidic.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Orchidic.Views"
        Width="1200" Height="800"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Orchidic.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        xmlns:avaControls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        Title="Orchidic">
  <Window.Resources>
    <views:MenuWidthConverter x:Key="MenuWidthConverter" />
  </Window.Resources>

  <Window.Styles>
    <Style Selector="Grid.menuBackground">
      <Setter Property="Background" Value="{DynamicResource MenuBGBrush}" />
    </Style>
    <Style Selector="Grid.title">
      <Setter Property="Height" Value="100"></Setter>
    </Style>
    <Style Selector="Grid.title > TextBlock">
      <Setter Property="FontSize" Value="28"></Setter>
      <Setter Property="HorizontalAlignment" Value="Center"></Setter>
      <Setter Property="Foreground" Value="{DynamicResource TitleBrush}"></Setter>
      <Setter Property="VerticalAlignment" Value="Center"></Setter>
      <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>

  </Window.Styles>


  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <Grid
    Background="{DynamicResource BGBrush}"
    RowDefinitions="Auto, *" ColumnDefinitions="Auto, *"
    Margin="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource StateToMargin}}">

    <!-- content -->
    <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
      <avaControls:TransitioningContentControl Content="{Binding CurrentPageViewModel}">
        <avaControls:TransitioningContentControl.PageTransition>
          <CrossFade Duration="0:0:0.15"></CrossFade>
        </avaControls:TransitioningContentControl.PageTransition>
      </avaControls:TransitioningContentControl>
    </Grid>

    <!-- title bar -->
    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="50"
          Background="Transparent"
          PointerPressed="TitleBar_PointerPressed">
      <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal">
        <Grid Height="50" Width="30" Margin="8,0,0,0">
          <views:WinCtrlButton Size="20"
                               Click="CloseButton_OnClick"
                               FillColor="{DynamicResource WindowCloseBtnFillBrush}"
                               HoverColor="{DynamicResource WindowCloseBtnHoverBrush}"
                               PressedColor="{DynamicResource WindowCloseBtnPressedBrush}" />
        </Grid>
        <Grid Height="50" Width="30">
          <views:WinCtrlButton Size="20"
                               Click="MaxButton_OnClick"
                               FillColor="{DynamicResource WindowCtrlBtnFillBrush}"
                               HoverColor="{DynamicResource WindowCtrlBtnHoverBrush}"
                               PressedColor="{DynamicResource WindowCtrlBtnPressedBrush}" />
        </Grid>
        <Grid Height="50" Width="30">
          <views:WinCtrlButton Size="20"
                               Click="MinButton_OnClick"
                               FillColor="{DynamicResource WindowCtrlBtnFillBrush}"
                               HoverColor="{DynamicResource WindowCtrlBtnHoverBrush}"
                               PressedColor="{DynamicResource WindowCtrlBtnPressedBrush}" />
        </Grid>
      </StackPanel>

    </Grid>

    <!-- left menu bar -->
    <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
          Classes="menuBackground"
          Width="{Binding Width, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource MenuWidthConverter}}">

      <Grid RowDefinitions="Auto, *">
        <!-- title -->
        <Grid Classes="title">
          <TextBlock>
            Orchidic
          </TextBlock>
        </Grid>

        <!-- menu -->
        <views:SideMenu Grid.Row="1" DataContext="{Binding SideMenuViewModel}"></views:SideMenu>
      </Grid>


    </Grid>


  </Grid>

</Window>