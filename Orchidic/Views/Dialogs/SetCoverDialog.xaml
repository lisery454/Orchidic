<Window x:Class="Orchidic.Views.Dialogs.SetCoverDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fluentWpfChromes="clr-namespace:FluentWpfChromes;assembly=FluentWpfChromes"
        Width="400" Height="300"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        SnapsToDevicePixels="True"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="#ff343434"
        Title="修改封面">
  
  <fluentWpfChromes:AcrylicChrome.AcrylicChrome>
    <fluentWpfChromes:AcrylicChrome CaptionHeight="20" IsBlurred="True" ResizeBorderThickness="0" />
  </fluentWpfChromes:AcrylicChrome.AcrylicChrome>
  
  <Grid>
    <Border Background="Transparent" Padding="20">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" FontSize="16" Text="请选择音频路径" VerticalAlignment="Center" />
          <Button Grid.Column="1" Margin="10,0,0,0" Style="{StaticResource SimpleButton}"
                  Click="SelectAudio_OnClick">
            <Button.Content>
              <TextBlock FontSize="16" Text="选择" />
            </Button.Content>
          </Button>
        </Grid>
        
        <TextBox Grid.Row="1" FontSize="16" Margin="0,0,0,10" Foreground="{StaticResource PrimaryBrush}"
                 Text="{Binding AudioPath , RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                 IsReadOnly="True" />


        <Grid Grid.Row="2" Margin="0,0,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" FontSize="16" Text="请选择图片路径" VerticalAlignment="Center" />
          <Button Grid.Column="1" Margin="10,0,0,0" Style="{StaticResource SimpleButton}"
                  Click="SelectImage_OnClick">
            <Button.Content>
              <TextBlock FontSize="16" Text="选择" />
            </Button.Content>
          </Button>
        </Grid>


        <TextBox Grid.Row="3" FontSize="16" Margin="0,0,0,10" Foreground="{StaticResource PrimaryBrush}"
                 Text="{Binding ImagePath , RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                 IsReadOnly="True" />


        <Grid Grid.Row="5">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <Button Grid.Column="1" Style="{StaticResource SimpleButton}" Click="Cancel_Click"
                  Margin="0,0,10,0">
            <Button.Content>
              <TextBlock FontSize="16" Text="取消" />
            </Button.Content>
          </Button>
          <Button Grid.Column="2" Style="{StaticResource SimplePrimaryButton}" Click="Ok_Click">
            <Button.Content>
              <TextBlock FontSize="16" Text="确认" />
            </Button.Content>
          </Button>
        </Grid>
      </Grid>

    </Border>
  </Grid>
</Window>
