<Application x:Class="Orchidic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Orchidic"
             xmlns:converters="clr-namespace:Orchidic.Converters">
  <Application.Resources>
    <ResourceDictionary>
      <converters:PageTitleConverter x:Key="PageTitleConverter" />
      <converters:WindowStateToMarginConverter x:Key="StateToMargin" />
      <converters:ViewModelToViewConverter x:Key="ViewModelToViewConverter" />

      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/ThemeDark.xaml" />
        <ResourceDictionary Source="Styles/Fonts.xaml" />
        <ResourceDictionary Source="Styles/ButtonStyle.xaml" />
        <ResourceDictionary Source="Styles/TextBlockStyle.xaml" />
        <ResourceDictionary Source="Styles/ThumbStyle.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>


</Application>